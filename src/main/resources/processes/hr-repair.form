<input type="text" class="form-control" name="id" id="id" value="${id}" />
<input type="text" class="form-control" name="taskId" id="taskId" value="${taskId}" />
<input type="hidden" class="form-control" name="handler" value="repairer" />

<div class="form-group">
    <label for="deviceName" class="col-sm-2 control-label">故障设备名称</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" name="deviceName" id="deviceName" value="${deviceName}" />
    </div>
</div>

<div class="form-group">
    <label for="description" class="col-sm-2 control-label">故障描述</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" name="description" id="description" value="${description}" />
    </div>
</div>

<input type="text" class="form-control" name="comment" id="comment" />

<button type="button" id="submit">提交</button>
