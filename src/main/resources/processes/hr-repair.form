<input type="hidden" class="form-control" name="id" id="id" value="${id}" />
<input type="hidden" class="form-control" name="taskId" id="taskId" value="${taskId}" />
<input type="hidden" class="form-control" name="handler" value="repairer" />

  <div class="form-group">
      <label for="createdTime" class="col-sm-2 control-label">申请时间</label>
      <input type="text" class="form-control" readonly name="createdTime" id="createdTime" value="${createdTime}" />
  </div>

  <div class="form-group">
      <label for="applicant" class="col-sm-2 control-label">申请人</label>
      <input type="text" class="form-control" readonly name="applicant" id="applicant" value="${applicant}" />
  </div>

  <div class="form-group">
      <label for="deviceName" class="col-sm-2 control-label">故障设备名称</label>
      <input type="text" class="form-control" readonly name="deviceName" id="deviceName" value="${deviceName}" />
  </div>

  <div class="form-group">
      <label for="description" class="col-sm-2 control-label">故障描述</label>
      <textarea class="form-control" readonly name="description" id="description" rows="3" >${description}</textarea>
  </div>

<div class="form-group" id="commentGroup">
      <label for="comment" class="col-sm-2 control-label">备注意见</label>
      <textarea class="form-control" name="comment" id="comment" rows="3" required="required"></textarea>
</div>
<div class="col-md-4 text-center">
    <button type="button" id="submitBtn" class="btn btn-primary btn-lg">提交</button>
    <button type="button" onclick="goBack()" class="btn btn-primary btn-lg">返回</button>
</div>
